<h2>Login</h2>
<%= form_tag(user_login_path, method: "get", remote: true, :id => "login") do %>
  <%= email_field_tag(:email, nil, placeholder: 'Email') %>
  <%= password_field_tag(:password, nil, placeholder: 'Password') %>
  <%= submit_tag('Log in') %>
<% end %>
<div id="buttons">
	<a href="#" id="signupButton">Signup</a>
	<a href="#" id="backButton">Back</a>
</div>
