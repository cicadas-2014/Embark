
<%= render "embark/topnav" %>
<div id="userforms">
  <div id="loginform">
    <%= render "users/login" %>
  </div>
  <div id="signupform">
    <%= render "users/signup" %>  
  </div>

</div>

<div id="back"></div>

<p id="tagline">Choose your own adventure</p>

<div id="category_filter">
<%= form_tag(adventures_path, method: "get") do %>
<%= hidden_field_tag 'params', @params.to_json  %>
<%= collection_select(:category, :category_id, Category.all, :id, :name, {
  :prompt => 'Filter By Category',  
  }, {
  :onchange => "this.form.submit()"
  }
)%>
<% end %>
</div>


<a data-no-turbolink="true" href="/adventures?search=inspire"><div id="compass">`</div></a>
</div>



<div id="gallery">
  <%if @adventures.length > 27 %>
  <% @adventures.each do |adv| %>
  <a href="/adventures/<%= adv.id %>"><img src=<%=adv.image_url%> alt=""></a>
  <% end %>
  <% else %>
  <%@adventures.each do |adv|%>
  <div class="image">
    <a href="/adventures/<%=adv.id%>">
      <img src=<%=adv.image_url%> alt="">
    </a>
    <div id='title'><%=adv.title%></div>
  </div>
  <%end%>
  <% end %>
</div>
<div id='tagline'><div id='quote'>“Adventure is worthwhile in itself.” <em>- Amelia Earhart</em></div>
<a data-no-turbolink="true" href="/adventures?search=inspire">
<div id="inspirationbutton">Infinite Possibilites await</div></a></div>




