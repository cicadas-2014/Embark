<div id="adventureDescription">
  <div id="embark">
    <a href="/">Embark</a>
  </div>

  <div class="show_images">
    <% unless @adventure.city.images.empty? %>
    <div id="main_image">
      <img id="main_image" class="largeimage" src='<%= @adventure.images.first.url %>'/>
    </div>
    <div id="thumbnail_container">
    <div id="adventures_images">
      <% @adventure.city.images[0..4].each do |image| %>
      <img class="smallimage" src='<%= image.url %>'/>
      <% end %>
      <img class="smallimage" src='<%= @adventure.image_url %>'/>
    </div>
    </div>
    <% end %>

    <div class='adventure_info'>
      <div id='description'>
       <header><%= @adventure.name %></header>
       <p><%= @adventure.description %></p>
     </div>
    <div id="images"></div>

  </div>