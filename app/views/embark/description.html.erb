<%= render "embark/topnav" %>
<div id="userforms">
  <div id="loginform">
    <%= render "users/login" %>
  </div>
  <div id="signupform">
    <%= render "users/signup" %>  
  </div>

</div>

<div id="back"></div>
 <div id="inspire">   <header><%= @adventure.title %></header> 
</div>


  <% if session[:id] %>
    <% if User.find(session[:id]).adventures.all.include?(Adventure.find(@adventure.id)) %>
       <div  class="favorite_div">
        <form >
          <input type="button" adventure='nil' id="favorite_button" value="Saved to favorites!!"/>
        </form>
      </div>
    <% else %>
      <div  class="favorite_div">
        <form >
          <input type="button" adventure='<%= @adventure.id %>' id="favorite_button" value="Save to your favorites"/>
        </form>
      </div>
    <% end %>
  <% end %>  
 </div>

 

<br>

<div class="information">
<div class="show_images">
  <br>
    <div id="main_image">
      <img id="main_image" class="largeimage" src='<%= @adventure.image_url %>'/>
     <%@adventure.city.images.each do |image|%>
        <img id="main_image" class="largeimage" src='<%= image.medium_image_url %>'/>
      <%end%>
    </div>
  </div> 

  <br>

  <div id="adventureDescription">

  <div id='description'>
  
        <img id="compass2" src="/compass.jpg"/>

      <p><%= @adventure.description %></p>
  </div>



  <div id="map">
    <script type="text/javascript">
      var latitude = <%= @adventure.city.latitude %>;
      var longitude = <%= @adventure.city.longitude %>;
      renderMap(latitude,longitude); 
    </script>
  </div>
  <br>
</div>

<br>


</div>
